<h1>Register</h1>
<%= form_with model: @user, url: register_path do |form| %>
  <% if form.object.errors.any? %>
    <div class="alert alert-danger">
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label "Email Address", class: "form-label" %>
    <%= form.email_field :email, class: "form-control", placeholder: "john@stjude.com" %>
  </div>
  <div class="mb-3">
    <%= form.label "Password", class: "form-label" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter password here" %>
  </div>
  <div class="mb-3">
    <%= form.label "Confirm Password", class: "form-label" %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Enter password again" %>
  </div>
  <%= form.submit "Register", class: "btn btn-primary" %>
<% end %>
